<Window x:Class="TycoonRevitAddin.UI.StackManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TycoonRevitAddin.UI"
        Title="ðŸ“ User Scripts Layout Manager"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="PanelHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="StackHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>

        <Style x:Key="ScriptItemStyle" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D5DBDB"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                    <Setter Property="Background" Value="#E8F4FD"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DropZoneStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="AllowDrop" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="Background" Value="#E8F4FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Additional Styles for Advanced Features -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Custom Converters -->
        <local:BoolToExpanderConverter x:Key="BoolToExpanderConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>

        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                    <Setter Property="BorderThickness" Value="4"/>
                    <Setter Property="Background" Value="#F8F9FA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StackHeaderBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                    <Setter Property="Background" Value="#E8F4FD"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Search and Filters -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="ðŸ“ USER SCRIPTS LAYOUT MANAGER ðŸ“"
                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"
                       Foreground="#E74C3C" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Text="ðŸŽ¯ ORGANIZE USER SCRIPTS ONLY â€¢ SYSTEM BUTTONS ARE FIXED ðŸŽ¯"
                       FontSize="12" HorizontalAlignment="Center" Foreground="#3498DB"
                       Margin="0,0,0,10" FontWeight="Bold"/>

            <!-- Search and Filter Bar -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Column="0" x:Name="SearchBox"
                         Style="{StaticResource SearchBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,0"/>

                <!-- Filter Buttons -->
                <ToggleButton Grid.Column="1" Content="â­ Favorites"
                              Style="{StaticResource FilterButtonStyle}"
                              IsChecked="{Binding ShowFavoritesOnly}"/>

                <ToggleButton Grid.Column="2" Content="ðŸ•’ Recent"
                              Style="{StaticResource FilterButtonStyle}"
                              IsChecked="{Binding ShowRecentOnly}"/>

                <Button Grid.Column="3" Content="ðŸ—‘ï¸ Clear"
                        Padding="8,4" Margin="2" Click="ClearFilters_Click"/>

                <Button Grid.Column="4" Content="ðŸ”„ Refresh GitHub"
                        Padding="8,4" Margin="2" Click="RefreshGitHub_Click"
                        ToolTip="Check for GitHub script updates"/>

                <Button Grid.Column="5" Content="ðŸ’¾ Save Layout"
                        Padding="8,4" Margin="2" Click="SaveLayout_Click"/>
            </Grid>
        </Grid>

        <!-- Main Content - Dynamic Panel Container -->
        <ItemsControl Grid.Row="1" x:Name="PanelContainer" ItemsSource="{Binding Panels}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource PanelStyle}"
                            BorderBrush="{Binding Color}"
                            AllowDrop="True"
                            Drop="Panel_Drop"
                            DragOver="Panel_DragOver"
                            DragLeave="Panel_DragLeave">

                        <StackPanel>
                            <!-- Draggable Panel Header -->
                            <Border Background="{Binding Color}"
                                    MouseLeftButtonDown="PanelHeader_MouseDown"
                                    Cursor="SizeAll">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <TextBlock Text="â‹®â‹®" FontSize="14" Foreground="White" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource PanelHeaderStyle}"
                                               Foreground="White" TextAlignment="Center"/>
                                    <TextBlock Text="â‹®â‹®" FontSize="14" Foreground="White" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Panel Content -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                                <StackPanel Margin="5">
                                    <!-- Stacks Container -->
                                    <ItemsControl ItemsSource="{Binding Stacks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,5">
                                                    <!-- Stack Header -->
                                                    <Border Style="{StaticResource StackHeaderBorderStyle}"
                                                            MouseLeftButtonDown="StackHeader_MouseDown">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding IsExpanded, Converter={StaticResource BoolToExpanderConverter}}"
                                                                       FontSize="12" Margin="0,0,5,0" Cursor="Hand"
                                                                       MouseLeftButtonDown="ToggleStack_Click"/>
                                                            <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding Name}" Style="{StaticResource StackHeaderStyle}" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding LayoutDescription}" FontSize="10"
                                                                       Foreground="#7F8C8D" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                                            <Button Content="+" Width="20" Height="20" Margin="5,0,0,0"
                                                                    Click="AddScript_Click" Tag="{Binding}" FontSize="10"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Stack Scripts -->
                                                    <ItemsControl ItemsSource="{Binding Scripts}" Margin="10,0,0,0"
                                                                  Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisConverter}}"
                                                                  AllowDrop="True" Drop="Stack_Drop" DragOver="Stack_DragOver" DragLeave="Stack_DragLeave">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Style="{StaticResource ScriptItemStyle}" Margin="2"
                                                                        MouseLeftButtonDown="Script_MouseDown"
                                                                        AllowDrop="True" Drop="Script_Drop" DragOver="Script_DragOver" DragLeave="Script_DragLeave"
                                                                        ContextMenuOpening="Script_ContextMenuOpening">
                                                                    <Border.ContextMenu>
                                                                        <ContextMenu>
                                                                            <MenuItem Header="â­ Toggle Favorite" Click="ToggleFavorite_Click"/>
                                                                            <MenuItem Header="ðŸ–¼ï¸ Set Icon" Click="SetIcon_Click"/>
                                                                            <MenuItem Header="ðŸ—‘ï¸ Remove" Click="RemoveScript_Click"/>
                                                                            <Separator/>
                                                                            <MenuItem Header="ðŸ“‹ Copy" Click="CopyScript_Click"/>
                                                                            <MenuItem Header="ðŸ“„ Paste" Click="PasteScript_Click"/>
                                                                        </ContextMenu>
                                                                    </Border.ContextMenu>

                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding FavoriteIcon}" FontSize="10" Margin="0,0,5,0"/>
                                                                        <Image Source="{Binding IconPath}" Width="12" Height="12" Margin="0,0,5,0"
                                                                               Visibility="{Binding IconPath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                                        <TextBlock Text="ðŸ”§" FontSize="10" Margin="0,0,5,0"
                                                                                   Visibility="{Binding IconPath, Converter={StaticResource InverseStringToVisibilityConverter}}"/>
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="Bold"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- Drop Zone for Scripts -->
                                                    <Border Style="{StaticResource DropZoneStyle}"
                                                            AllowDrop="True" Drop="StackDropZone_Drop" DragOver="StackDropZone_DragOver"
                                                            Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisConverter}}">
                                                        <TextBlock Text="Drop scripts here..." FontSize="10"
                                                                   Foreground="#95A5A6" HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" Margin="5"/>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Add New Stack Button -->
                                    <Button Content="âž• Add New Stack" Margin="5" Padding="10,5"
                                            Click="AddStack_Click" Tag="{Binding}"
                                            Background="#ECF0F1" BorderBrush="#BDC3C7"
                                            AllowDrop="True"
                                            DragOver="AddStackButton_DragOver"
                                            Drop="AddStackButton_Drop"/>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="ðŸ’¾ Save Layout" Width="120" Height="30" Margin="5"
                    Background="#27AE60" Foreground="White" BorderThickness="0" Click="SaveButton_Click"/>
            <Button x:Name="ExportTemplateButton" Content="ðŸ“¤ Export Template" Width="140" Height="30" Margin="5"
                    Background="#3498DB" Foreground="White" BorderThickness="0" Click="ExportTemplate_Click"
                    ToolTip="Export current layout as a template file for sharing"/>
            <Button x:Name="CancelButton" Content="âŒ Cancel" Width="120" Height="30" Margin="5"
                    Background="#95A5A6" Foreground="White" BorderThickness="0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
