<Window x:Class="TycoonRevitAddin.UI.FirstRunWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸš€ Tycoon AI-BIM Platform - First Run Setup"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸš€ Welcome to Tycoon AI-BIM Platform!" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Downloading the latest scripts from GitHub..."
                       FontSize="16"
                       Foreground="#6C757D"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Repository Information Section -->
        <Border Grid.Row="1" Background="White"
                BorderBrush="#DEE2E6" BorderThickness="1"
                CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ GitHub Repository Information"
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="#2C3E50" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Repository URL -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Repository:"
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="Jrandolph3110/tycoon-ai-bim-platform"
                               VerticalAlignment="Center"
                               Foreground="#007ACC" FontFamily="Consolas"
                               Margin="10,0,0,8"/>

                    <!-- Branch -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Branch:"
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="main"
                               VerticalAlignment="Center"
                               Foreground="#28A745" FontFamily="Consolas"
                               Margin="10,0,0,8"/>

                    <!-- Status -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:"
                               VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="âœ… Automatically configured - no setup required"
                               VerticalAlignment="Center"
                               Foreground="#28A745"
                               Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="2" Background="White" 
                BorderBrush="#DEE2E6" BorderThickness="1" 
                CornerRadius="8" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ“¥ Initial Script Download" 
                           FontSize="18" FontWeight="SemiBold" 
                           Foreground="#2C3E50" Margin="0,0,0,15"/>

                <ProgressBar x:Name="DownloadProgressBar" 
                             Height="20" Margin="0,0,0,10"
                             Visibility="Collapsed"/>

                <TextBlock x:Name="ProgressStatusTextBlock" 
                           Text="Ready to download scripts from GitHub repository"
                           FontSize="14" Foreground="#6C757D"
                           TextWrapping="Wrap"/>

                <ScrollViewer x:Name="LogScrollViewer" 
                              Height="150" Margin="0,10,0,0"
                              VerticalScrollBarVisibility="Auto"
                              Visibility="Collapsed">
                    <TextBlock x:Name="LogTextBlock" 
                               FontFamily="Consolas" FontSize="12"
                               Foreground="#495057" 
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SkipButton" Content="â­ï¸ Skip Setup" 
                    Style="{StaticResource SecondaryButton}"
                    Click="Skip_Click" Margin="0,0,10,0"/>
            <Button x:Name="DownloadButton" Content="ðŸ“¥ Download Scripts" 
                    Style="{StaticResource ModernButton}"
                    Click="Download_Click" Margin="0,0,10,0"/>
            <Button x:Name="FinishButton" Content="âœ… Finish" 
                    Style="{StaticResource ModernButton}"
                    Click="Finish_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
