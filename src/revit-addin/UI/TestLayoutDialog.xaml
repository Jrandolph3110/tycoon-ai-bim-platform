<Window x:Class="TycoonRevitAddin.UI.TestLayoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔥 TEST LAYOUT DIALOG v0.8.1.4 - WORKING! 🔥"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="🚀 THIS IS A TEST DIALOG 🚀" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="Red" Margin="0,0,0,20"/>
            
            <TextBlock Text="If you can see this, XAML loading works!" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Foreground="Blue" Margin="0,0,0,20"/>
            
            <Border BorderBrush="Green" BorderThickness="3" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="✅ XAML Features Test:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="• Colors: Red, Blue, Green" Margin="5"/>
                    <TextBlock Text="• Borders: 3px Green with 10px radius" Margin="5"/>
                    <TextBlock Text="• Fonts: 24px, 16px, Bold" Margin="5"/>
                    <TextBlock Text="• Layout: Grid, StackPanel, Border" Margin="5"/>
                </StackPanel>
            </Border>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="TestButton" Content="✅ Test Button" 
                        Width="120" Height="40" Margin="10"
                        Background="Green" Foreground="White" 
                        FontWeight="Bold" Click="TestButton_Click"/>
                <Button x:Name="CloseButton" Content="❌ Close" 
                        Width="120" Height="40" Margin="10"
                        Background="Red" Foreground="White" 
                        FontWeight="Bold" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
