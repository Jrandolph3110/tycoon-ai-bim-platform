{
  // ============================================================================
  // TYCOON AI-BIM PLATFORM - COMPREHENSIVE SCRIPT TEMPLATE
  // ============================================================================
  // This script.json file demonstrates all available configuration properties
  // for scripts in the Tycoon AI-BIM Platform. Use this as a reference guide
  // for creating new scripts with proper configuration.
  // ============================================================================

  // BASIC SCRIPT INFORMATION
  // ============================================================================
  "name": "Script Template",
  "description": "Comprehensive template demonstrating all Tycoon AI-BIM Platform script features, configuration options, and integration patterns. Use this as a reference for creating new scripts.",
  "author": "F.L. Crane & Sons Development Team",
  "version": "1.0.0",

  // ASSEMBLY AND EXECUTION CONFIGURATION
  // ============================================================================
  "assemblyPath": "bin/Release/ScriptTemplate.dll",
  "className": "TycoonScripts.ScriptTemplate",

  // RIBBON PLACEMENT AND ORGANIZATION
  // ============================================================================
  // Available panels: "Production", "SmartTools", "Management"
  "panel": "SmartTools",
  
  // STACKING CONFIGURATION
  // ============================================================================
  // Scripts with the same "stack" value will be grouped together
  "stack": "Templates",
  "stackOrder": 1,
  
  // Stack display type: "stacked" (vertical buttons) or "dropdown" (pulldown menu)
  "stackType": "stacked",

  // SCRIPT BEHAVIOR CONFIGURATION
  // ============================================================================
  // Whether the script requires elements to be selected before execution
  "requiresSelection": false,
  
  // Whether the script can run in zero-document state (no active document)
  "allowZeroDoc": false,
  
  // Whether the script requires an active transaction
  "requiresTransaction": true,

  // METADATA AND CATEGORIZATION
  // ============================================================================
  // Tags for script categorization and search functionality
  "tags": ["template", "reference", "development", "example"],
  
  // Script category for organization (optional)
  "category": "Development",
  
  // Minimum Revit version required (optional)
  "minRevitVersion": "2022",
  
  // Maximum Revit version supported (optional)
  "maxRevitVersion": "2025",

  // UI AND USER EXPERIENCE
  // ============================================================================
  // Custom tooltip text (if not provided, auto-generated from description)
  "toolTip": "ðŸŽ¯ Script Template\nComprehensive reference template for Tycoon AI-BIM Platform script development\nAuthor: F.L. Crane & Sons Development Team\nPanel: SmartTools | Stack: Templates",
  
  // Large description for detailed help (optional)
  "longDescription": "This comprehensive script template serves as a complete reference guide for developing scripts in the Tycoon AI-BIM Platform. It demonstrates proper configuration, coding patterns, error handling, and integration with platform services.",

  // ADVANCED CONFIGURATION
  // ============================================================================
  // Custom icon path (relative to script directory, optional)
  "iconPath": "icon.png",
  
  // Whether script should be hidden from ribbon (for utility scripts)
  "hidden": false,
  
  // Whether script is experimental/beta
  "experimental": false,
  
  // Script priority for loading order (higher = loaded first)
  "priority": 100,

  // PLATFORM INTEGRATION
  // ============================================================================
  // Whether script integrates with Tycoon AI services
  "usesAI": true,
  
  // Whether script uses Neural Nexus memory system
  "usesNeuralNexus": true,
  
  // Whether script integrates with BIM-GPU acceleration
  "usesBimGpu": false,
  
  // Whether script requires MCP server connection
  "requiresMcp": true,

  // DEVELOPMENT AND DEBUGGING
  // ============================================================================
  // Whether this is a development/template script (excluded from production)
  "isDevelopment": true,
  
  // Debug mode settings
  "debugMode": true,
  
  // Logging level: "Error", "Warning", "Info", "Debug", "Trace"
  "logLevel": "Debug"
}
